<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
	<sitecore>
		<services>
			<configurator type="Sitecore.Solr.ManagedSchema.ServiceConfigurator, Sitecore.Solr.ManagedSchema"/>
		</services>

		<pipelines>
			<contentSearch.PopulateSolrSchema>				
				<processor type="Sitecore.Solr.ManagedSchema.PopulateSolrSchema.CustomPopulateFields, Sitecore.Solr.ManagedSchema"
						   patch:after="processor[@type='Sitecore.ContentSearch.SolrProvider.Pipelines.PopulateSolrSchema.PopulateFields, Sitecore.ContentSearch.SolrProvider']" resolve="true" />
			</contentSearch.PopulateSolrSchema>
		</pipelines>
	</sitecore>
</configuration>
